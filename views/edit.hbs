<!DOCTYPE html>
<html>
  <head>
    <title>Update data</title>
  </head>
  <body>
  <form action="/res/{{ data.id }}?_method=PUT" method="POST">
  
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="{{ data.name }}" required><br><br>
  
  <label for="email">Email:</label>
  <input type="email" id="email" name="email" value="{{ data.email }}" required><br><br>
  
  <label for="message">Message:</label>
  <textarea id="message" name="message" required>{{ data.message }}</textarea><br><br>
  
  <button type="submit">Update</button>
 </form>
 </body>
</html>
