<!DOCTYPE html>
<html>
  <head>
    <title>View Data</title>
  </head>
  <body>
    <h1>View Data</h1>
    <table border="2">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Message</th>
          <th>Update</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.message}}</td>
            <td>
            <form action="/res/{{this.id}}/edit" method="GET">
            <button onclick="return confirm('Are you sure you want to edit this ?')">Edit</button>  
            </form>
            </td>
            <td>
            <form action="/res/{{this.id}}?_method=DELETE" method="POST">
            <button onclick="return confirm('Are you sure you want to delete this?')">Delete</button> 
            </form>
            </td>
            </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>
